<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DeleteActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="602dp"
            android:layout_height="871dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.179" android:id="@+id/recyclerView"/>
    <EditText
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:text="이름을 입력하세요"
            android:ems="10"
            android:id="@+id/editSelectName"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.164" app:layout_constraintVertical_bias="0.428"/>
    <Button
            android:text="검색"
            android:layout_width="120dp"
            android:layout_height="63dp" android:id="@+id/SelectBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editSelectName" app:layout_constraintHorizontal_bias="0.63"
            android:layout_marginBottom="12dp" app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>